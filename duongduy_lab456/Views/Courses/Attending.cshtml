@model duongduy_lab456.ViewModels.CoursesViewModel
@{
    ViewBag.Title = "Home Page";
}
<h2>Attending</h2>
<form>
    <div style="margin-top: 60px;">
        <ul class="course">
            
            @foreach (var course in Model.UpcomingCourses)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                        <div class="day">
                            @course.DateTime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <div>
                            <span class="lecturer">
                                @course.Lecturer.Name
                                @if (Model.ShowAction)
                                {
                                    <button style="border-color:white; color:blue" class="btn btn-default btn-sm js-toggle-follow" data-user-id="@course.LecturerId">Follow</button>
                                }
                            </span>
                        </div>
                        <div>
                            <span class="category">
                                @course.Category.Name
                            </span>

                        </div>

                    </div>
                </li>
            }
        </ul>
        </div>
</form>
