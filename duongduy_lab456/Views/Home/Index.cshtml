@model IEnumerable<duongduy_lab456.Models.Course>
@{
    ViewBag.Title = "Home Page";
}
<form>
    <div style="margin-top: 60px;">
        <ul>
            @foreach (var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                        <div class="day">
                            @course.DateTime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <span class="lecturer">
                            @course.Lecturer.Name
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                    </div>
                </li>
            }
        </ul>
    </div>
</form>
